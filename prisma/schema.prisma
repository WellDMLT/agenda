generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProdutosEServicos {
  id        String  @id @default(uuid())
  nome      String
  valor     Float
  imagem    String?
  descricao String
}

model Prestador {
  id                String    @id @default(uuid())
  nome              String
  horarioDisponivel Horario[]
}

model Horario {
  id          String     @id @default(uuid())
  prestadorId String?
  prestador   Prestador? @relation(fields: [prestadorId], references: [id])
}

model Pedido {
  id String @id @default(uuid())
}
